# =============================================================================
# Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# 
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# SHOPIFY APP (Required)
# =============================================================================
# Get these from your Shopify Partner Dashboard > Apps > Your App > App Setup

SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app-url.ngrok.io
SCOPES=read_products,write_products

# Optional: Custom shop domain for development
# SHOP_CUSTOM_DOMAIN=your-dev-store.myshopify.com

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string (Prisma)

DATABASE_URL=postgresql://user:password@localhost:5432/personalize_design

# =============================================================================
# FAL.AI - Image Generation (Required for test generation)
# =============================================================================
# Get your API key from https://fal.ai > Dashboard > API Keys
# Cost: ~$0.05 per generated image (Seedream v4 Edit model)

FAL_KEY=your_fal_api_key

# =============================================================================
# INNGEST (Required for async generation)
# =============================================================================
# Get your keys from https://app.inngest.com > Settings > Keys

INNGEST_EVENT_KEY=your_inngest_event_key
INNGEST_SIGNING_KEY=your_inngest_signing_key
# Optional: fallback signing key for key rotation
# INNGEST_SIGNING_KEY_FALLBACK=your_inngest_signing_key_fallback
# Optional: environment name (eg. "development", "staging")
# INNGEST_ENV=development

# =============================================================================
# PRINTIFY INTEGRATION (Required for Printify features)
# =============================================================================
# 32-byte base64-encoded key for encrypting Printify tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

PRINTIFY_TOKEN_ENCRYPTION_KEY=your_32_byte_base64_key

# Optional: Custom user agent for Printify API
# PRINTIFY_USER_AGENT=personalize-design-app

# =============================================================================
# POSTHOG ANALYTICS (Optional)
# =============================================================================
# Product analytics - leave empty to disable

# POSTHOG_API_KEY=your_posthog_api_key
# POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# BILLING (Optional - for production)
# =============================================================================
# Set to "true" to use test billing mode in production
# Defaults to "true" in development, "false" in production

# SHOPIFY_BILLING_TEST_MODE=true

# =============================================================================
# LOGGING & DEBUGGING (Optional)
# =============================================================================
# Log level: trace, debug, info, warn, error, fatal

LOG_LEVEL=info

# Debug flags (set to "1" to enable)
# PD_DEBUG_AUTH_BOUNCE=1
# PD_DEBUG_AUTH_BOUNCE_BODY=1

# =============================================================================
# SUPABASE STORAGE (Optional - for file uploads in production)
# =============================================================================
# Currently mocked in development. Required for production file uploads.

# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_KEY=your_supabase_service_key
